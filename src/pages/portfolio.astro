---
import Layout from "@/layouts/Layout.astro";
import { projects } from "@/data/projects";

// SSG
export const prerender = true;

const title = "Portfolio | 1mm Tech Blog";
const description = "制作実績・プロジェクト一覧";
---

<Layout title={title} description={description}>
    <!-- Hero Section -->
    <section
        class="bg-gradient-to-b from-gray-50 to-white pt-20 pb-6 sm:pt-28 sm:pb-10"
    >
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h1
                class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-900 mb-6"
            >
                Portfolio
            </h1>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                これまでに開発したプロダクト・サービス一覧です。
            </p>
        </div>
    </section>

    <!-- Projects Grid -->
    <section class="pb-16 pt-8 sm:pb-20 sm:pt-12 bg-white">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
                {
                    projects.map((project) => (
                        <a
                            href={project.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class={`block bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all border border-gray-100 hover:border-${project.colorTheme}-200 group`}
                        >
                            <div class="flex flex-wrap gap-2 mb-4">
                                {project.tags.map((tag) => (
                                    <span
                                        class={`inline-block px-3 py-1 bg-${project.colorTheme}-50 text-${project.colorTheme}-700 text-xs font-medium rounded-full`}
                                    >
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                                {project.title}
                            </h3>

                            <p class="text-sm text-gray-500 mb-4 font-medium">
                                {project.subtitle}
                            </p>

                            <p class="text-gray-600 leading-relaxed mb-6">
                                {project.description}
                            </p>

                            <div
                                class={`inline-flex items-center text-${project.colorTheme}-600 font-semibold group-hover:gap-2 transition-all`}
                            >
                                Visit Site
                                <svg
                                    class="w-4 h-4 ml-1"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                    />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
                新しいプロジェクトのご相談
            </h2>
            <p class="text-gray-600 mb-8">
                Webアプリケーション開発、パフォーマンス改善、SEO対策など、お気軽にご相談ください。
            </p>
            <a
                href="/#contact"
                class="inline-flex items-center gap-2 bg-gray-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors"
            >
                お問い合わせはこちら
            </a>
        </div>
    </section>
</Layout>
